<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header') %>

<body>
    
        <h1>Brookdale Crowd - Fund your learning and development</h1>
      
        <button class="btn btn-lg btn-primary" onclick="showCreateModal()">Join the crowd!</button>

        <h1>Active Crowdsource Requests</h1>
        <h6 style="fixThisWithCSS">___________________________</h6>
        <% for(var i=0; i < requests.length; i++) { %>
            <ul class="list-group">
                <li class="list-group-item">
                    <%= requests[i].FIRST_NAME%>
                    <%= requests[i].LAST_NAME %> 
                    :
                    <%= requests[i].CSR_SUMMARY %> 
                    <br>
                    <form action="/viewDetails/<%= requests[i]._id %>" method="GET">
                        <button class="btn btn-sm btn-info">View Details</button>
                        <!-- <button class="btn btn-sm btn-info" onclick="viewRequestDetails( <%= i %> )">View Details</button> -->
                    </form>
                </li>
             </ul> 
        <% }%>

    <%- include('./partials/modals') %>
    
    <script>
        var requests = <%- JSON.stringify(requests) %>;
    </script>

</body>

</html>